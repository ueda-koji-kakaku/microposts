<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <h3>followed(<%= @users.count %>)</h3>
      <%= render partial: "users/user", collection: @users %>
    <% end %>
  </div>
</div>
